{% if attributes -%}
   <div id="gva-images-carousel" {{ attributes.addClass('slider-gallery-v1') }}>
{% endif %}

   {% set i = 0 %}
   {% for row in rows %}
      {% set i = i + 1 %}
         
         {% if i % 2 == 1 %}
            <div class="galery-small-wrap"><div class="gallery-small carousel-item">
         {% endif %}

            <div class="item content gallery-small-item">{{ row.content }}</div>
         
         {% if i % 2 == 0  or i == rows|length %}
            </div></div>
         {% endif %} 

   {% endfor %} 

{% if attributes -%}
    </div>
{% endif %}


